#!/bin/bash

# Update packages
sudo apt-get update -y

# Install nginx
sudo apt-get install -y nginx

# Create a new directory for the Holberton School page
sudo mkdir -p /var/www/holberton_school

# Create a new file for the Holberton School page
sudo touch /var/www/holberton_school/index.html

# Write the Holberton School page content to the file
sudo echo "<html><head><title>Holberton School</title></head><body><h1>Holberton School for the win!</h1></body></html>" > /var/www/holberton_school/index.html

# Change the owner of the new directory and file to www-data
sudo chown -R www-data:www-data /var/www/holberton_school

# Configure nginx to serve the Holberton School page
sudo rm /etc/nginx/sites-available/default
sudo echo "server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/holberton_school;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }
}" > /etc/nginx/sites-available/holberton_school

# Create a symbolic link to enable the new configuration
sudo ln -s /etc/nginx/sites-available/holberton_school /etc/nginx/sites-enabled/

# Restart nginx to apply the changes
sudo service nginx restart
